<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Reset your password
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Please answer your security question to reset your password
      </p>
    </div>
    <%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :phone_number, value: params[:phone_number] %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div class="p-4 bg-gray-50 rounded-t-md">
          <p class="text-sm font-medium text-gray-700">Security Question:</p>
          <p class="mt-1 text-sm text-gray-900"><%= @user.security_question %></p>
        </div>
        <div>
          <%= f.label :security_answer, "Your Answer", class: "sr-only" %>
          <%= f.text_field :security_answer, 
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", 
              placeholder: "Enter your answer" %>
        </div>
        <div>
          <%= f.label :password, "New Password", class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "new-password", 
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", 
              placeholder: "New Password" %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "sr-only" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", 
              placeholder: "Confirm New Password" %>
        </div>
      </div>

      <div>
        <%= f.submit "Reset Password", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="text-sm text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
